/**index.wxss**/
@import "../../wxParse/wxParse.wxss"; 
.ticket_bg{
	width:100%;
	height:200rpx;
	position: relative;
	margin-top: 40rpx;
}
.ticket_bg image{
	width:100%;
	height:100%;
}
.ticket_cont{
	width:100%;
	height:200rpx;
	position:absolute;
	left:0;
	top:0;
	display: flex;
	align-items: center;
}
.discount_left{
	width:50%;
	font-size:40rpx;
	color:#fff;
	text-align: center;
}
.discount_left1{
	color:#000;
}
.discount_left text{
	font-size: 150rpx;
}
.discount_center{
	width:50%;
	color: #fff;
}
.discount_center1{
	margin-bottom: 20rpx;
	color:#9d5d00;
	font-size: 26rpx;
}
.discount_center1 .discount_txt2{
	color:#333;
	margin-top:20rpx;
}
.discount_center1 .discount_txt1{
	font-size: 24rpx;
	padding: 0;
	margin-top: 10rpx;
}
.discount_txt1{
	font-size: 28rpx;
	padding-bottom: 10rpx;
}
.discount_txt2{
	font-size: 24rpx;
	padding-bottom: 10rpx;
}
.discount_txt3{
	width:220rpx;
	height:28rpx;
	background: #89d9ec;
	font-size:22rpx;
	text-align: center;
	line-height: 28rpx;
	color:#1f70ae; 
}

/**index.wxss**/
@import "../../../wxParse/wxParse.wxss"
#shopping{
	padding:0rpx 2.6%;
	height:200rpx;
	width:95.4%;
	border-radius: 30rpx;
	overflow: hidden;
	margin-top: 20rpx;
}
.select_status{width:8%;height:152rpx;line-height:152rpx;}
.select_status image{
	width:29rpx;
	height:29rpx;}
.shopping_box{
	width:100%;
	height:200rpx;
	background:#f5f5f5;
	overflow: hidden;
	border-radius: 10rpx 0 0 10rpx;
}
.shopping_item{
	width:96%;
	height:152rpx;
	position:relative;
	align-items:center;
	margin:0 auto;
}
.shopping_img{width:30%;height:152rpx;text-align:left;}
.shopping_img image{
	width:152rpx;
	height:152rpx;
	
}
.handle{
	width:10%;
	height:200rpx;
	text-align: center;
	background:#95e6ef;
	color:#666;
}
.handle_item{
	width:60%;
	height:200rpx;
	text-align: center;
	color:#fff;
	margin:0 auto;
}
.shopping_name{
	width:62.6%;
	align-items:center;
	overflow:hidden;
	height:140rpx;
}
.shopping_name text{
	display:block;
}
.shopping_name .text1{
	font-size:30rpx;
	color:#444;
	
}
.shopping_name .text2{
	font-size:24rpx;
	color:#999;
}
.shopping_name .price{
	color:#21c3d4;
	font-size:28rpx;
}
.shopping_name text{
	height:33.33%;
	align-items:center;
}
.total{
	width:100%;
	height:110rpx;
	position:fixed;
	bottom:110rpx;
	left:0rpx;
	align-items:center;
	background:#f2f2f2;

}

.item{
    width: 120%;
    height: 150rpx;
    position: relative; 
    display: flex;
    margin-top: 50rpx;
    right:-120rpx;
}
.item:first-child{
   margin-top: 0;
}
.item .remove{

    height: 100%;
    background-color: red;


    display: flex;
    justify-content: center;
    align-items: center;
}
.item .number-wrapper{
    height: 100%;

    width:150rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.item .ok{
    width: 60px;
    height: 100%;
    padding-right: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #98F5FF;
}
.item .img{
    width: 300rpx;
    height: 100%;
    margin-left: 20rpx;
}

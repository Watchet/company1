.number-wrapper .name{
    margin: 10rpx 10rpx 10rpx 10rpx;
    font-size: 30rpx;
    overflow: hidden;
    flex: 1;
}
.number-wrapper .count-wrapper{
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}
.number-wrapper .count-wrapper .decrease-btn{
  font-size: 30rpx;
}
.number-wrapper .count-wrapper .increase-btn{
    font-size: 30rpx;
}
.number-wrapper .count-wrapper .count{
  margin: 0 10rpx 0 10rpx;
  font-size: 30rpx;
}
.number-wrapper .price-wrapper{
    margin-left: 10rpx;
}
.number-wrapper .price-wrapper .unit{
  font-size: 30rpx;
}
.number-wrapper .price-wrapper .price{
  margin-left: 10rpx;
  font-size: 30rpx;
}

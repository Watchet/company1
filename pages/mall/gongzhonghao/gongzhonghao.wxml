<!--sort wxml-->

<view id="sort">
<view class="search">
	<view class="sort_all" bindtap="sort_show">
		<image src="/images/sort.jpg"></image>
		<view class="sort_txt">分类</view>
	</view>
	
	<input placeholder="搜索商品名称"></input>
</view>
<view class="made_product flexRowBetween">
	<view class="{{isShow?'mask':''}}">
	</view>
	<view class="made_sort {{isShow?'sildeIn':'slideOut'}}" >
		<block wx:for="{{web_labelData}}" wx:key="id">
			<view class="madeSort  {{web_index == index?'made_bg':''}}" data-index="{{index}}" data-id="{{item.child[0].id}}" catchtap="menuTap">
				<view src="/images/made_bg.png" class="left_bar">
						<view class="lsort_LeftAll">
							<view class="img_bg text1 active">{{item.title}}</view>
						</view>
					<view class="small_sort">
						<block wx:for="{{web_labelData[index].child}}" wx:for-item="c_item" wx:for-index="c_index">
							<text class="text2" catchtap="menuTap"  data-id="{{c_item.id}}" data-index="{{index}}" style="{{fonts[2].font}};{{web_currentId == c_item.id?'color:#39bddf':''}}">{{c_item.title}}</text>
						</block>
					</view>
				</view>	
			</view>
		</block>
	</view>
	<view class="made_cont" style="width:100%;">	
		<view class="product_sort flexRowBetween">
			<view data-num="1" class="product_item {{_num==1?'changeColor':''}}" data-sortby="multi" bindtap="changeSort">
				<text>综合</text>
				<image src="{{_num == 0?'/images/des_icon1.jpg':'/images/des_icon2.jpg'}}"></image>
			</view>
			<view data-num="2" class="product_item {{_num==2?'changeColor':''}}" data-sortby="multi" bindtap="changeSort">
				
				<text>销量</text>
				<image src="{{_num == 1?'/images/des_icon1.jpg':'/images/des_icon2.jpg'}}"></image>
			</view>
			<view data-num="3" class="product_item {{_num==3?'changeColor':''}}" data-sortby="multi" bindtap="changeSort">
				
				<text>新品</text>
				<image src="{{_num == 2?'/images/des_icon1.jpg':'/images/des_icon2.jpg'}}"></image>
			</view>
			<view data-num="4" class="product_item {{_num==4?'changeColor':''}}" data-sortby="price" bindtap="changeSort">
				
				<text>价格</text>
				<image src="{{_num == 3?'/images/des_icon1.jpg':'/images/des_icon2.jpg'}}"></image>
			</view>
		</view>

		<view class="madeContItem madeShow">
			<block wx:for="{{web_mainData[index].sku}}" wx:key="id">
				<view class="shopping_item" bindtap="intoPath" data-path="/pages/mall/detail/detail?id={{item.id}}">
					<view class="shopping_img">
						<image src="{{item.mainImg[0].url}}"></image>
					</view>
					<view class="shopping_name">
						<text class="text1">{{item.title}}</text>
						<text class="text2">个性化定制</text>
						
						<view class="flexRowBetween" style="align-items:center;">
							<view style="width:65%;"><text class="price">¥{{item.price}}</text></view>
							<view class="edit_number" style="display:flex;align-items:center;">
								<view class="text" >4999件已售</view>
								<image src="/images/shopCart.jpg"></image>
							</view>
						</view>
					</view>	
				</view>
			</block>
		</view>
	</view>
</view>
</view>
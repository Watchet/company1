<!--payment.wxml-->
    <view class="pay_money">
        <view class="pay_before">
          充值金额
        </view>
        <input placeholder="请输入充值金额" bindblur="changeBind" data-key="price" value="{{web_submitData.price}}"></input>
    </view>
    <view class="submit_info">
      <form bindsubmit="submit" class="form_button" report-submit="true">
        <button form-type="submit" class="form_btn color1" bindtap="{{web_buttonCanClick?'pay':''}}">立即充值</button>
      </form>
    </view>
    
    
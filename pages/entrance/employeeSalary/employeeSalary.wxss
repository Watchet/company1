page{
	width:100%;
	min-height:100%;
	background:#f4f4f4;
}
.employeeRegister{
	height:140rpx;
	padding:0 2.6%;
	width:94.8%;
	border-radius:10rpx;
	margin-top:20rpx;
}
.bgs{
	background:#fff;
}
.register{
	width:116rpx;
	height:116rpx;
	background:linear-gradient(to bottom,rgba(72,222,223,1.00),rgba(42,154,225,1.00));
	position:fixed;
	bottom:20%;
	right:0;
	border-radius:50%;
	font-size:80rpx;
	color:#fff;
	text-align:center;
	line-height:108rpx;
}
.user_left{
	width:20%;
}
.user_info{
	width:30%;
}
.salary{
	width:64%;
	text-align:right;
}
.next_page{
	width:6%;
	text-align:right;
}
.next_page image{
	margin-left:20rpx;
}
.user_img{
	width:100rpx;
	height:100rpx;
	border-radius:50%;
	overflow:hidden;
}
.date{
	height:90rpx;
	display:flex;
	align-items: center;
  	justify-content: center;
  	color:#666;
  	background:#fff;
}
.date_left{
	height:70rpx;
}
.date_item{
	height:70rpx;
	width:50%;
	text-align:center;
	display:flex;
	align-items: center;
  	justify-content: center;
}
.date_item .text{
	height:50%;
}
.date_item image{
	width:17rpx;
	height:10rpx;
	margin-left:10rpx;
}
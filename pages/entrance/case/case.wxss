/**index.wxss**/

@import "../../../wxParse/wxParse.wxss"
page{
	background:#f2f2f2;
}
.menu{
	height:90rpx;
	background: #fff;
}
.menu_click {
	width:100%;
	height:100%;
}
.index_product{
	flex-wrap: wrap;
}
.recommend_left{
	width:48.5%;
	border-radius: 10rpx;
	padding-bottom: 20rpx;
	height:366rpx;
	text-align: center;
	background:#fff;
	margin-top: 20rpx;
}
.recommend_left image{
	width:100%;
	height: 300rpx;
}
.product_name{
	height:66rpx;
	line-height: 66rpx;
}
.menu_click image{
	width:50rpx;
	height:58rpx;
	margin:0 auto;
	transition:all 1s;
	animation:down 1s infinite; 
}
@keyframes down{
	0%{
		transform: translateY(0rpx);
	}
	50%{
		transform: translateY(16rpx);
	}
	100%{
		transform: translateY(0rpx);
	}
}
.menu_cont{
	background: #fff;
	position: absolute;
	top:-100%;
	transition:all 0.3s;
}
.menu_choose{
	height:90rpx;
	border-bottom: solid 1px #e0e0e0;
}
.menu_all{
	flex-wrap: wrap;
}
.menu_item{
	width:208rpx;
	height:68rpx;
	border-radius: 20rpx;
	border:solid 1px #dcdcdc;
	text-align:center;
	line-height: 68rpx;
	margin-bottom: 30rpx;
	margin-right:12rpx;
}
.product_name {
	width:100%;
}
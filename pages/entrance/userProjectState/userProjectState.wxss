page{
	min-height:100%;
	width:100%;
	background:#f2f2f2;
}
.state{
	border-left: solid 4rpx #21c3d4;
	position: relative;
}
.state_cont{
	height:200rpx;
}
.state_left{
	width:2.6%;
	height:100%;
	position:relative;
}
.state_right{
	width:97.4%;
	height:100%;
}
.state_right_box{
	width:94%;
	padding:0 3%;
	height:184rpx;
	background:#fff;
	border-radius: 20rpx;
}
.circle{
	width:16rpx;
	height:16rpx;
	background:#21c3d4;
	border-radius: 50%;
	position: absolute;
	left:-8rpx;
}
.state_top {
	height: 50%;
}
.state_bottom{
	height:40%;
	display: flex;
}
.next_page{
	text-align: right;
}
.next_page image{
	width:12rpx;
	height:20rpx;
}
.state_text{
	height:100%;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2; 
}
.date{
	height:90rpx;
	border-top:solid 1px #ccc;
	border-bottom:solid 1px #ccc;
	display:flex;
	align-items: center;
  	justify-content: center;
  	color:#666;
}
.date_left{
	height:70rpx;
}
.date_item{
	height:70rpx;
	border-right:solid 1px #ccc;
	width:50%;
	text-align:center;
	display:flex;
	align-items: center;
  	justify-content: center;
}
.date_item .text{
	height:50%;
}
.date_item image{
	width:17rpx;
	height:10rpx;
	margin-left:10rpx;
}